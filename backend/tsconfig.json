{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "nodenext",
        "target": "ES6",
        "sourceMap": true,
        "outDir": "dist",
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "test/**/*", "config"],
    "exclude": ["node_modules"],
    "ts-node": { "esm": true, "experimentalSpecifierResolution": true },
    "types": ["node", "jest"]
}